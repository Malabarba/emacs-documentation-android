<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.malabarba.emacsdocumentation"
          android:versionCode="4"
          android:versionName="1.2.1" >

  <uses-sdk
      android:minSdkVersion="8"
      android:targetSdkVersion="19" />

  <application
      android:name=".App"
      android:allowBackup="true"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Theme.Sherlock" >
    <activity
        android:name=".MainActivity"
        android:label="@string/icon_name"
        android:launchMode="singleTask" >

      <intent-filter>
        <action android:name="android.intent.action.VIEW"></action>
        <category android:name="android.intent.category.DEFAULT"></category>
        <category android:name="android.intent.category.BROWSABLE"></category>

        <data android:host="bruce-connor.github.io" android:scheme="http"
              android:pathPrefix="emacs-online-documentation/Fun"></data>
        <data android:host="bruce-connor.github.io" android:scheme="http"
              android:pathPrefix="emacs-online-documentation/Face"></data>
        <data android:host="bruce-connor.github.io" android:scheme="http"
              android:pathPrefix="emacs-online-documentation/Var"></data>
      </intent-filter>
      
      <intent-filter>
        <action android:name="android.intent.action.SEND" />
        <category android:name="android.intent.category.DEFAULT" />
        
        <data android:mimeType="text/plain" />
      </intent-filter>
      
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".SettingsActivity" android:label="@string/app_name" >
    </activity>
  </application>

</manifest>
